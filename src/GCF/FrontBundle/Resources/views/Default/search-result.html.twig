{% extends '@GCFFront/base.html.twig' %}
{% block title %} GCF - {{ 'search.Search'|trans }} {% endblock %}
{% block stylesheets %}
    <style>
        .result_search_container {
            padding: 0 !important;
        }

        .result_search_container img {
            max-width: 100%
        }

        .block_header h2 {
            background: #22AA86;
            color: white;
            font-size: 25px;
            padding: 5px 15px;;
        }

        .block_body .item {
            background: #e1e1e1;
            border: solid white;
            min-height: 235px;
        }

        .read_more_container {
            margin-top: 15px;
        }

        .block_body .col-md-12.item h3 {
            margin: 0
        }

        .block_body .col-md-12.item {
            padding: 10px;
        }

    </style>
{% endblock %}
{% block body %}
<div class="col-md-12">
    {{ render( controller('GCFFrontBundle:Default:banniere', { 'keyword': keyword, 'type': type, 'gouvr': gouvr }) ) }}
</div>
<div class="col-md-12">
    {% if Acteurs|length > 0 %}
        <div class="result_search_container col-md-12">
            <div class="block_header">
                <h2>
                    {{ 'search.Result'|trans }} {{ 'search.Actors'|trans }}
                </h2>
            </div>
            <div class="block_body">
                {% for Acteur in Acteurs %}
                    <div class="col-md-6 item ">
                        <div class="row">
                            <div class="col-md-4">
                                <a href="#">
                                    <img class="img-fluid" src="{{ Acteur.Logo }}"/>
                                </a>
                            </div>
                            <div class="col-md-8">
                                <h3 class="name">{{ Acteur.Nom }}</h3>
                                <p><strong>Date: </strong>{{ "now"|date("d-m-Y") }}</p>
                                <p><strong>Acteur Parent : {{ Acteur.ActeurParent }}</p>
                                <p class="description">{{ Acteur.Description|slice(0, 180)|striptags }}</p>
                            </div>
                        </div>
                        
                    </div>
                {% endfor %}
                {% if type=="Type" %}
                <div class="row read_more_container col-md-12">
                    <center>
                        <a href="{{ path('gcf_front_searchpage') }}?key={{keyword}}&gouvr={{gouvr}}&type=Actors"><button class="button_see_more_lg">{{ 'search.Seemore'|trans }}</button></a>
                    </center>
                </div>
                {% endif %}
            </div>
        </div>
    {% endif %}
    
    {% if Projets|length > 0 %}
        <div class="result_search_container col-md-12">
            <div class="block_header">
                <h2>
                    {{ 'search.Result'|trans }} {{ 'search.Projects'|trans }}
                </h2>
            </div>
            <div class="block_body">
                {% for Projet in Projets %}
                    <div class="col-md-6 item ">
                        <h3 class="name">{{ Projet.Nom }}</h3>
                        <p><strong>Date: </strong>{{ "now"|date("d-m-Y") }}</p>
                        <p><strong>Acteur: {{ Projet.Acteur }}</p>
                        <p class="description">{{ Projet.Description }}</p>
                    </div>
                {% endfor %}
                {% if type=="Type" %}
                <div class="row read_more_container col-md-12">
                    <center>
                        <a href="{{ path('gcf_front_searchpage') }}?key={{keyword}}&gouvr={{gouvr}}&type=Projects"><button class="button_see_more_lg">{{ 'search.Seemore'|trans }}</button></a>
                    </center>
                </div>
                {% endif %}
            </div>
        </div>
    {% endif %}

    {% if Publications|length > 0 %}
        <div class="result_search_container col-md-12">
            <div class="block_header">
                <h2>
                    {{ 'search.Result'|trans }} {{ 'search.Publications'|trans }}
                </h2>
            </div>
            <div class="block_body">
                {% for Publication in Publications %}
                    <div class="col-md-12 item ">
                        <div class="row">
                            <div class="col-md-4">
                                <a href="#">
                                    <img class="img-fluid" src="{{ Publication.featuredImage }}"/>
                                </a>
                            </div>
                            <div class="col-md-8">
                                <h3 class="name">{{ Publication.Titre }}</h3>
                                <p class="description">{{ Publication.Contenu|slice(0, 180)|striptags }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                {% if type=="Type" %}
                <div class="row read_more_container col-md-12">
                    <center>
                        <a href="{{ path('gcf_front_searchpage') }}?key={{keyword}}&gouvr={{gouvr}}&type=Publications"><button class="button_see_more_lg">{{ 'search.Seemore'|trans }}</button></a>
                    </center>
                </div>
                {% endif %}
            </div>
        </div>
    {% endif %}
    
    {% if Events|length > 0 %}
    <div class="result_search_container col-md-12">
        <div class="block_header">
            <h2>
                {{ 'search.Result'|trans }} {{ 'search.Events'|trans }}
            </h2>
        </div>
        <div class="block_body">
            {% for Event in Events %}
                <div class="col-md-12 item ">
                    <div class="row">
                        <div class="col-md-4">
                            <a href="#">
                                <img class="img-fluid" src="{{ Event.photoCouverture }}"/>
                            </a>
                        </div>
                        
                        <div class="col-md-8">
                            <h3 class="name">{{ Event.Nom }}</h3>
                            <p class="description">{{ Event.Description }}</p>
                        </div>
                    </div>
                </div>

            {% endfor %}
            {% if type=="Type" %}
            <div class="row read_more_container col-md-12">
                <center>
                    <a href="{{ path('gcf_front_searchpage') }}?key={{keyword}}&gouvr={{gouvr}}&type=Events"><button class="button_see_more_lg">{{ 'search.Seemore'|trans }}</button></a>
                </center>
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %}
    
    {% if Elearnings|length > 0 %}
    <div class="result_search_container col-md-12">
        <div class="block_header">
            <h2>
                {{ 'search.Result'|trans }} {{ 'search.E-learning'|trans }}
            </h2>
        </div>
        <div class="block_body">
            {% for Elearning in Elearnings %}
                <div class="col-md-12 item ">
                    <div class="row">
                        <div class="col-md-4">
                            <a href="#">
                                <img class="img-fluid" src="{{ Elearning.Image }}"/>
                            </a>
                        </div>
                        
                        <div class="col-md-8">
                            <h3 class="name">{{ Elearning.Nom }}</h3>
                            <p class="description">{{ Elearning.Description }}</p>
                        </div>
                    </div>
                </div>

            {% endfor %}
            {% if type=="Type" %}
            <div class="row read_more_container col-md-12">
                <center>
                    <a href="{{ path('gcf_front_searchpage') }}?key={{keyword}}&gouvr={{gouvr}}&type=E-learning"><button class="button_see_more_lg">{{ 'search.Seemore'|trans }}</button></a>
                </center>
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %}
    
</div>
{% endblock %}